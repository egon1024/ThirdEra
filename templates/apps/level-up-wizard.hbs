<form class="level-up-wizard-form level-up-wizard-form--flex" data-appid="{{appId}}" autocomplete="off">
  <header class="level-up-wizard-header">
    <h2 class="level-up-wizard-title">{{stepLabel}}: {{stepTitle}}</h2>
  </header>

  {{#if (eq step "class")}}
  <div class="level-up-wizard-body">
    <p class="level-up-wizard-hint">{{localize "THIRDERA.LevelUpWizard.ChooseClassHint"}}</p>
    {{#if hasClasses}}
    <div class="level-up-class-choices">
      {{#each classes as |cls|}}
      <button type="button" class="level-up-class-option {{#if (eq cls.id ../selectedClassValue)}}selected{{/if}}" data-value="{{cls.id}}">
        <span class="level-up-option-dot"></span>
        <span class="level-up-option-label">{{localize "THIRDERA.LevelUpWizard.LevelUpClass" name=cls.name current=cls.currentLevels}}</span>
      </button>
      {{/each~}}
      <button type="button" class="level-up-class-option {{#if addNewClassMode}}selected{{/if}}" data-value="add-new">
        <span class="level-up-option-dot"></span>
        <span class="level-up-option-label">{{localize "THIRDERA.LevelUpWizard.AddNewClass"}}</span>
      </button>
    </div>
    {{else}}
    <p class="level-up-wizard-hint">{{localize "THIRDERA.LevelUpWizard.NoClassesHint"}}</p>
    <div class="level-up-class-choices">
      <button type="button" class="level-up-class-option {{#if addNewClassMode}}selected{{/if}}" data-value="add-new">
        <span class="level-up-option-dot"></span>
        <span class="level-up-option-label">{{localize "THIRDERA.LevelUpWizard.AddNewClass"}}</span>
      </button>
    </div>
    {{/if}}

    {{#if addNewClassMode}}
    <div class="form-group level-up-new-class-picker">
      <label for="level-up-new-class-select">{{localize "THIRDERA.LevelUpWizard.SelectClassToAdd"}}</label>
      <select id="level-up-new-class-select" name="newClassUuid">
        <option value="">{{localize "THIRDERA.LevelUpWizard.SelectClassPlaceholder"}}</option>
        {{#each availableClasses as |opt|}}
        <option value="{{opt.uuid}}">{{opt.name}} ({{opt.packName}})</option>
        {{/each}}
      </select>
    </div>
    {{/if}}
  </div>
  {{/if}}

  {{#if (eq step "hp")}}
  <div class="level-up-wizard-body form-group">
    <p class="level-up-wizard-hp-info">
      <span class="level-up-wizard-hp-class">{{localize "THIRDERA.LevelUpWizard.ClassLabel"}}: {{className}}</span>
      <span class="level-up-wizard-hp-die">{{localize "THIRDERA.LevelUpWizard.HitDieLabel"}}: {{hitDie}}</span>
    </p>
    <div class="form-group level-up-hp-input-row">
      <label for="level-up-hp-input">{{localize "THIRDERA.LevelUpWizard.HpForThisLevel"}}</label>
      <div class="level-up-hp-controls">
        <input type="number" id="level-up-hp-input" name="hpRolled" value="{{hpRolled}}" min="0" data-dtype="Number" />
        {{#if canRoll}}
        <button type="button" class="level-up-roll-hp" data-action="rollHp" data-hit-die="{{hitDie}}" title="{{localize "THIRDERA.LevelUpWizard.RollHpTitle"}}">
          <i class="fas fa-dice-d20"></i> {{localize "THIRDERA.LevelUpWizard.Roll"}} {{hitDie}}
        </button>
        {{/if}}
      </div>
    </div>
  </div>
  {{/if}}

  <footer class="level-up-wizard-footer flexrow">
    {{#if (eq step "hp")}}
    <button type="button" data-action="back"><i class="fas fa-arrow-left"></i> {{localize "THIRDERA.LevelUpWizard.Back"}}</button>
    {{/if}}
    <button type="button" data-action="cancel">{{localize "THIRDERA.LevelUpWizard.Cancel"}}</button>
    <button type="button" data-action="next">
      {{#if (eq step "hp")}}{{localize "THIRDERA.LevelUpWizard.Next"}}{{else}}{{localize "THIRDERA.LevelUpWizard.Next"}}{{/if}}
    </button>
  </footer>
</form>
